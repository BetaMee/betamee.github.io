{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "graphql": true
    },
    "extends": [                                                                                                             
        "eslint:recommended",                                                                                                              
        "plugin:react/recommended"
      ],  
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error",2],
        "linebreak-style":  [0 ,"error", "windows"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "react/prop-types": 0
    }
}